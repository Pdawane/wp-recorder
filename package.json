{
    "name": "whatsapp-call-recorder",
    "version": "1.0.0",
    "description": "Desktop app to record WhatsApp video calls",
    "main": "main.js",
    "scripts": {
      "start": "electron .",
      "package-win": "electron-packager . WhatsAppRecorder --platform=win32 --arch=x64 --out=dist/",
      "package-mac": "electron-packager . WhatsAppRecorder --platform=darwin --arch=x64 --out=dist/",
      "package-linux": "electron-packager . WhatsAppRecorder --platform=linux --arch=x64 --out=dist/"
    },
    "keywords": ["whatsapp", "recorder", "video", "call"],
    "author": "Your Name",
    "license": "MIT",
    "devDependencies": {
      "electron": "^28.0.0",
      "electron-packager": "^17.1.2"
    }
  }