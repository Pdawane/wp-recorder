{
  "name": "whatsapp-call-recorder",
  "version": "1.0.0",
  "description": "Automatic WhatsApp call recorder for desktop",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:all": "electron-builder -mw"
  },
  "keywords": [
    "whatsapp",
    "recorder",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.13.3"
  },
  "dependencies": {
    "audiotee": "^0.0.7",
    "ffmpeg-static": "^5.3.0",
    "fluent-ffmpeg": "^2.1.3",
    "node-window-manager": "^2.2.4"
  },
  "build": {
    "appId": "com.yourcompany.whatsapp-recorder",
    "productName": "WhatsApp Call Recorder",
    "publish": null,
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "package.json"
    ],
"win": {
  "target": [
    {
      "target": "nsis",
      "arch": ["x64"]
    }
  ],
  "icon": "assets/icon.ico",
  "requestedExecutionLevel": "asInvoker"
}
,
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icon.icns",
      "category": "public.app-category.utilities",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "entitlements.mac.plist",
      "entitlementsInherit": "entitlements.mac.plist",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "To record your voice during calls",
        "NSCameraUsageDescription": "To capture video during calls",
        "NSAudioCaptureUsageDescription": "To record other participants' voices"
      }
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
